{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"outDir": "build",
		"rootDir": ".",
		"esModuleInterop": true,
		"strict": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": false,
		"noEmitOnError": true,
		"forceConsistentCasingInFileNames": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"types": [
			"node",
			"jest"
		],
		"moduleResolution": "node"
	},
	"include": [
		"src/**/*.ts",
		"scripts/**/*.ts",
		"migrations/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"build",
		"dist"
	]
}